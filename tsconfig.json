{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node10",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules"]
}
